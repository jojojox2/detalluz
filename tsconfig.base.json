{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@detalluz/api": ["libs/api/src/index.ts"],
      "@detalluz/material": ["libs/material/src/index.ts"],
      "@detalluz/services": ["libs/services/src/index.ts"],
      "@detalluz/shared": ["libs/shared/src/index.ts"],
      "@detalluz/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
